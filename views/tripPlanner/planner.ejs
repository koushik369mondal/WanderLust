    background: rgba(108, 117, 125, 0.05);
    border-radius: 10px;
    padding: 1rem;
    height: 100%;
}

.recommendations-card h6, .tips-card h6 {
    margin-bottom: 0.75rem;
    font-weight: 600;
}

