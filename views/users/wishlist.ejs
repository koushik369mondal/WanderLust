<% layout('/layouts/boilerplate') %>

<style>
    /* Modern Glass Container - Matching Navbar Design */
    .glass-container {
        background: rgba(6, 73, 87, 0.3);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        color: var(--text-primary, #2d3748);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    [data-theme="dark"] .glass-container {
        background: rgba(10, 81, 97, 0.2);
        border-color: rgba(255, 255, 255, 0.1);
        color: var(--text-primary, white);
        -webkit-text-fill-color: rgb(2, 0, 0);
        text-shadow:(2px,2px,4px)rgb(252, 252, 252);
    }
    [data-theme="light"] .glass-container {
        background: rgba(10, 81, 97, 0.2);
        border-color: rgba(255, 255, 255, 0.1);
        color: var(--text-primary, white);
        -webkit-text-fill-color: rgb(2, 0, 0);
        text-shadow:(2px,2px,4px)rgb(252, 252, 252);
    }

    
    .glass-container h3 {
        font-weight: 700;
        color: #fefbfb;
        margin-bottom: 1rem;
    }
    
    .glass-container p {
        font-size: 1.1rem;
        color: var(--text-secondary, #666666);
        margin-bottom: 1rem;
    }
    

    .glass-container .btn-primary {
        background: #fe424d;
        border: 2px solid #fe424d;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .glass-container .btn-primary:hover {
        background: #e53e3e;
        border-color: #e53e3e;
        transform: translateY(-2px);
    }

    /* Modern Card Design */
    .card-img-container {
        height: 15rem;
        overflow: hidden;
        border-radius: 1rem 1rem 0 0;
    }

    .card-img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    /* Modern Priority Badges */
    .priority-badge {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        padding: 0.5rem 1rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        z-index: 10;
        backdrop-filter: blur(10px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .priority-high {
        background: rgba(220, 53, 69, 0.9);
        color: white;
        border: 1px solid rgba(220, 53, 69, 0.3);
    }

    .priority-medium {
        background: rgba(255, 193, 7, 0.9);
        color: #212529;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .priority-low {
        background: rgba(40, 167, 69, 0.9);
        color: white;
        border: 1px solid rgba(40, 167, 69, 0.3);
    }

    /* Modern Wishlist Actions */
    .wishlist-actions {
        position: absolute;
        bottom: 0.75rem;
        left: 0.75rem;
        z-index: 10;
    }

    .wishlist-actions .btn {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        padding: 0.4rem 0.6rem;
        font-size: 0.85rem;
        font-weight: 500;
        color: #dc3545;
        transition: all 0.2s ease;
    }

    .wishlist-actions .btn:hover {
        border-color: #dc3545;
        background: rgba(220, 53, 69, 0.1);
        transform: scale(1.05);
    }

    /* Modern Card Design */
    .listing-card {
        border: none !important;
        border-radius: 1.2rem !important;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        position: relative;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    [data-theme="dark"] .listing-card {
        background: rgba(30, 30, 30, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
    }

    .listing-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.15);
    }

    .listing-card:hover .card-img-container img {
        transform: scale(1.05);
    }

    /* Modern Card Notes */
    .card-notes {
        background: rgba(254, 66, 77, 0.1);
        border-left: 3px solid #fe424d;
        border-radius: 0 8px 8px 0;
        padding: 0.75rem;
        margin-top: 1rem;
        font-style: italic;
        font-size: 0.9rem;
        color: var(--text-secondary, #666666);
        backdrop-filter: blur(5px);
    }

    [data-theme="dark"] .card-notes {
        background: rgba(254, 66, 77, 0.2);
        color: var(--text-secondary, #cccccc);
    }

    /* Modern Wishlist Meta */
    .wishlist-meta {
        font-size: 0.85rem;
        color: var(--text-muted, #6c757d);
        margin-top: 0.75rem;
        padding-top: 0.75rem;
        border-top: 1px solid rgba(0, 0, 0, 0.08);
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    [data-theme="dark"] .wishlist-meta {
        border-top-color: rgba(255, 255, 255, 0.1);
        color: var(--text-muted, #cccccc);
    }

    .wishlist-meta .badge {
        background: rgba(254, 66, 77, 0.1);
        color: #fe424d;
        border: 1px solid rgba(254, 66, 77, 0.2);
        font-weight: 500;
    }

    /* Modern Card Body */
    .listing-card .card-body {
        padding: 1.25rem;
        background: transparent;
    }

    .listing-card .card-text b {
        color: var(--text-primary, #2d3748);
        font-weight: 600;
        font-size: 1.1rem;
    }

    .listing-card .card-text .text-muted {
        color: var(--text-secondary, #666666) !important;
        font-weight: 500;
    }

    /* Price Styling */
    .listing-card .card-text {
        font-size: 1rem;
        line-height: 1.6;
    }
</style>

<div class="container my-5">
    <div class="row">
        <div class="col-12 glass-container">
            <h3><i class="fa-solid fa-bookmark me-2"></i>My Wishlist</h3>
            <p >Your saved destinations and dream stays!</p>
        </div>
    </div>
    
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <% if (wishlistItems && wishlistItems.length > 0) { %>
            <% for(let item of wishlistItems) { %>
                <% if (item.listing) { %>
                <div class="col">
                    <a href="/listings/<%= item.listing._id %>" class="listing-link">
                        <div class="card listing-card h-100">
                            <!-- Priority Badge -->
                            <div class="priority-badge priority-<%= item.priority %>">
                                <%= item.priority %>
                            </div>
                            
                            <!-- Remove Button -->
                            <div class="wishlist-actions">
                                <form action="/profile/wishlist/<%= item.listing._id %>?_method=DELETE" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" 
                                            onclick="event.preventDefault(); event.stopPropagation(); if(confirm('Remove from wishlist?')) this.form.submit();">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                            
                            <div class="card-img-container">
                                <img src="<%= item.listing.image && item.listing.image.url ? item.listing.image.url : 'https://via.placeholder.com/300' %>" 
                                     class="card-img-top" alt="<%= item.listing.title || 'Listing Image' %>">
                            </div>
                            
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= item.listing.title || 'Untitled Listing' %></b><br>
                                    <small class="text-muted">
                                        <i class="fa-solid fa-location-dot me-1"></i><%= item.listing.location || 'Location not available' %>
                                    </small><br>
                                    &#8377;<%= item.listing.price ? item.listing.price.toLocaleString("en-IN") : 'Price not available' %> / night
                                </p>
                                
                                <% if (item.notes) { %>
                                    <div class="card-notes">
                                        "<%= item.notes %>"
                                    </div>
                                <% } %>
                                
                                <div class="wishlist-meta">
                                    Added: <%= new Date(item.addedAt).toLocaleDateString() %>
                                    <% if (item.isPrivate) { %>
                                        <span class="badge bg-secondary ms-1">Private</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
            <% } %>
        <% } else { %>
            <div class="col-12 glass-container mt-3">
                <p><i class="fa-solid fa-bookmark me-2"></i>You haven't added any listings to your wishlist yet.</p>
                <p>Start exploring to save your favorite destinations!</p>
                <a href="/listings" class="btn btn-primary mt-2">
                    <i class="fa-solid fa-compass me-1"></i>Explore Listings
                </a>
            </div>
        <% } %>
    </div>
</div>