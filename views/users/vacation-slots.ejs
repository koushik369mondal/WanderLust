<% layout("/layouts/boilerplate") %>

<div class="vacation-slots-container">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="vacation-slots-header mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h1 class="mb-1">
                                <i class="fa-solid fa-calendar-check me-2"></i>
                                My Vacation Slots
                            </h1>
                            <p class="text-muted mb-0">Your saved holiday dates for vacation planning</p>
                        </div>
                        <a href="/holiday" class="btn btn-primary">
                            <i class="fa-solid fa-plus me-1"></i>
                            Add More Slots
                        </a>
                    </div>
                </div>

            <% if (vacationSlots && vacationSlots.length > 0) { %>
                <div class="row">
                    <% vacationSlots.forEach(slot => { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="vacation-slot-card card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="vacation-date">
                                            <h5 class="card-title mb-1"><%= slot.holidayName %></h5>
                                            <p class="text-muted mb-0">
                                                <i class="fa-solid fa-calendar me-1"></i>
                                                <%= new Date(slot.date).toLocaleDateString('en-US', { 
                                                    weekday: 'long', 
                                                    year: 'numeric', 
                                                    month: 'long', 
                                                    day: 'numeric' 
                                                }) %>
                                            </p>
                                        </div>
                                        <button class="btn btn-sm btn-outline-danger remove-slot-btn" 
                                                data-date="<%= slot.date %>" 
                                                title="Remove vacation slot">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </div>
                                    
                                    <div class="vacation-details">
                                        <div class="mb-2">
                                            <span class="badge bg-primary me-2">
                                                <i class="fa-solid fa-flag me-1"></i>
                                                <%= slot.country %>
                                            </span>
                                            <span class="badge bg-secondary">
                                                <%= slot.holidayType %>
                                            </span>
                                        </div>
                                        
                                        <% if (slot.notes && slot.notes.trim()) { %>
                                            <div class="vacation-notes">
                                                <small class="text-muted">
                                                    <i class="fa-solid fa-note-sticky me-1"></i>
                                                    <%= slot.notes %>
                                                </small>
                                            </div>
                                        <% } %>
                                        
                                        <div class="vacation-meta mt-3">
                                            <small class="text-muted">
                                                <i class="fa-solid fa-clock me-1"></i>
                                                Added <%= new Date(slot.markedAt).toLocaleDateString() %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <% 
                                                const today = new Date();
                                                const slotDate = new Date(slot.date);
                                                const diffTime = slotDate - today;
                                                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                                            %>
                                            <% if (diffDays > 0) { %>
                                                <i class="fa-solid fa-hourglass-half me-1"></i>
                                                <%= diffDays %> days to go
                                            <% } else if (diffDays === 0) { %>
                                                <i class="fa-solid fa-star me-1"></i>
                                                Today!
                                            <% } else { %>
                                                <i class="fa-solid fa-check me-1"></i>
                                                Past
                                            <% } %>
                                        </small>
                                        <a href="/holiday/destinations/<%= slot.date %>" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fa-solid fa-map-location-dot me-1"></i>
                                            Explore
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-4">
                        <i class="fa-solid fa-calendar-xmark fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">No Vacation Slots Yet</h4>
                    <p class="text-muted mb-4">
                        Start planning your perfect getaways by marking holidays as vacation slots!
                    </p>
                    <a href="/holiday" class="btn btn-primary btn-lg">
                        <i class="fa-solid fa-calendar-plus me-2"></i>
                        Browse Holiday Calendar
                    </a>
                </div>
            <% } %>
            </div>
        </div>
    </div>
</div>

<style>
.vacation-slots-container {
    min-height: 100vh;
    padding: 2rem 0;

}

.vacation-slots-header {
    background: var(--bg-primary);
    border-radius: 15px;
    padding: 2.5rem;
    margin-bottom: 30px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    border: 1px solid var(--border-color);
}

.vacation-slots-header h1 {
    color: var(--text-primary);
    font-weight: 700;
    margin-bottom: 1rem;
}

.vacation-slot-card {
    background: var(--bg-primary);
    border: none;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    border-radius: 15px;
    border-left: 4px solid var(--accent-color);
    position: relative;
    overflow: hidden;
}

.vacation-slot-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-color), #ff6b6b, #4ecdc4);
}

.vacation-slot-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}

.vacation-date h5 {
    color: var(--accent-color);
    font-weight: 600;
    font-size: 1.2rem;
}

.vacation-notes {
    background: rgba(254, 66, 77, 0.1);
    padding: 0.75rem;
    border-radius: 8px;
    border-left: 3px solid var(--accent-color);
    margin-top: 0.5rem;
}

.remove-slot-btn {
    transition: all 0.3s ease;
}

.remove-slot-btn:hover {
    background-color: var(--bs-danger);
    color: white;
    border-color: var(--bs-danger);
    transform: scale(1.1);
}

.empty-state {
    background: var(--bg-primary);
    border-radius: 15px;
    margin: 2rem 0;
    padding: 3rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    text-align: center;
}

.empty-icon {
    opacity: 0.6;
    margin-bottom: 2rem;
}

.badge {
    font-size: 0.8rem;
    padding: 0.5rem 0.75rem;
}

.card-footer {
    background: rgba(0,0,0,0.02) !important;
    border-top: 1px solid rgba(0,0,0,0.05);
}

@media (max-width: 768px) {
    .vacation-slots-container {
        padding: 1rem 0;
    }
    
    .vacation-slots-header {
        padding: 1.5rem;
        margin-bottom: 20px;
    }
    
    .vacation-slots-header .d-flex {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .vacation-slot-card {
        margin-bottom: 1rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle remove vacation slot
    document.querySelectorAll('.remove-slot-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
            const date = this.dataset.date;
            
            if (confirm('Are you sure you want to remove this vacation slot?')) {
                try {
                    const response = await fetch(`/holiday/vacation-slot/${date}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.error || 'Failed to remove vacation slot');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Failed to remove vacation slot');
                }
            }
        });
    });
});
</script>