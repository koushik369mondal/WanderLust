<% layout('/layouts/boilerplate') %>

<style>
  .form-card {
    background: rgba(20, 30, 48, 0.45); /* darker glass */
    backdrop-filter: blur(18px) saturate(180%);
    -webkit-backdrop-filter: blur(18px) saturate(180%);
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.25);
    padding: 2rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.35);
  }

  h3 {
    font-weight: 700;
    color: #ffffff;
    letter-spacing: -0.5px;
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
  }

  /* Labels */
  .form-label {
    font-weight: 600;
    color: #f8fafc; /* bright white */
    margin-bottom: 0.5rem;
  }

  /* Inputs & Select */
  .form-control,
  .form-select {
    border-radius: 0.8rem;
    padding: 0.9rem 1rem;
    font-size: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: rgba(0, 0, 0, 0.35); /* darker translucent */
    color: #ffffff; /* user text = pure white */
    transition: all 0.3s ease-in-out;
  }

  .form-control::placeholder,
  .form-select option {
    color: rgba(255, 255, 255, 0.65); /* brighter placeholder */
  }

  .form-control:focus,
  .form-select:focus {
    border-color: #38bdf8;
    background: rgba(0, 0, 0, 0.5);
    box-shadow: 0 0 12px rgba(56, 189, 248, 0.7);
    color: #ffffff;
  }

  /* File input fix */
  input[type="file"] {
    color: #fff;
  }

  /* Image Preview */
  .listing-preview-wrapper {
    display: none;
    margin-top: 1rem;
    border-radius: 0.8rem;
    overflow: hidden;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.35);
  }

  .listing-preview-wrapper img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }

  /* Submit Button */
  .btn-submit {
    background: linear-gradient(135deg, #38bdf8, #0ea5e9);
    border: none;
    border-radius: 0.75rem;
    font-weight: 600;
    padding: 0.9rem;
    transition: all 0.25s ease-in-out;
    color: #fff;
    font-size: 1rem;
    letter-spacing: 0.3px;
    box-shadow: 0 4px 14px rgba(14, 165, 233, 0.4);
  }

  .btn-submit:hover {
    background: linear-gradient(135deg, #0ea5e9, #2563eb);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(14, 165, 233, 0.55);
  }
  /* FIX 1: File Input Vertical Alignment */
.file-upload-wrapper {
    /* Use Flexbox to vertically center the button and text, fixing misalignment */
    display: flex; 
    align-items: center; /* Vertically centers all children */
    gap: 1rem; /* Adds space between the button and the 'No file chosen' text */
    flex-wrap: nowrap; /* Prevents wrapping which could break alignment */
}

/* FIX 2: Curvy Design & Contrast */
.file-input-control {
    border-radius: 25px; /* Makes the entire input area curvy/oval */
    border: 2px solid var(--accent-color, #43E0D8); /* Subtle border color */
    padding: 0.5rem 1rem; /* Add internal padding */
    font-weight: 500;
    
    /* Ensure text contrast is right in Dark Mode */
    color: #f7f7f7; 
    background-color: rgba(255, 255, 255, 0.1);
}

/* Styling the actual 'Choose File' button inside the input element */
.file-input-control::file-selector-button {
    border-radius: 20px; /* Makes the internal button curvy */
    background-color: var(--primary-color, #fe424d); /* Consistent with other buttons (Red) */
    color: white;
    padding: 0.4rem 1rem;
    border: none;
    transition: all 0.2s ease;
}

/* Ensure Light Mode compatibility (if background turns white, text must be dark) */
@media (prefers-color-scheme: light) {
    .file-input-control {
        color: #333333;
        background-color: #ffffff;
        border-color: #ced4da;
    }
}
</style>

<div class="row mt-5">
  <div class="col-md-8 offset-md-2">
    <div class="form-card"> 
      <h3 class="text-center mb-4">Create a New Listing</h3>

      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" placeholder="Add a catchy title" name="listing[title]" id="title" class="form-control" required />
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please enter a title.</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" id="description" class="form-control" rows="3" placeholder="Write a short description..." required></textarea>
          <div class="valid-feedback">Description looks good!</div>
          <div class="invalid-feedback">Please enter a short description.</div>
        </div>

        <!-- Category -->
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" id="category" class="form-select" required>
            <option selected disabled value="">Choose a category</option>
            <option>Trending</option>
            <option>Rooms</option>
            <option>Iconic Cities</option>
            <option>Mountains</option>
            <option>Castles</option>
            <option>Amazing Pool</option>
            <option>Camping</option>
            <option>Farms</option>
            <option>Arctic</option>
            <option>Domes</option>
            <option>Boats</option>
          </select>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please select a category.</div>
        </div>

        <!-- Best Season & Travel Tip -->
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="bestSeason" class="form-label">Best Season to Visit</label>
            <input name="listing[bestSeason]" id="bestSeason" placeholder="e.g., Winter (Nov-Feb)" type="text" class="form-control">
          </div>
          <div class="mb-3 col-md-6">
            <label for="travelTip" class="form-label">Travel Buddy Tip</label>
            <input name="listing[travelTip]" id="travelTip" placeholder="e.g., Go early to avoid crowds" type="text" class="form-control">
          </div>
        </div>

        <div class="mb-3">
    <label for="image" class="form-label">Upload Listing Image</label>
    
    <div class="file-upload-wrapper">
        <input 
            type="file" 
            name="listing[image]" 
            id="image" 
            class="form-control file-input-control" 
            accept="image/*" 
            onchange="previewImage(event)" 
            required
        >
    </div>
    <div class="listing-preview-wrapper mt-3">
        <img id="imagePreview" src="" alt="Image Preview">
    </div>
    <div class="valid-feedback">Looks good!</div>
    <div class="invalid-feedback">Please upload an image.</div>
</div>

        <!-- Price & Country -->
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input placeholder="1200" name="listing[price]" id="price" class="form-control" type="number" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" placeholder="India" name="listing[country]" id="country" class="form-control" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter the country name.</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" placeholder="Jaipur, Rajasthan" name="listing[location]" id="location" class="form-control" required />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter the location.</div>
        </div>

        <!-- Submit -->
        <button class="btn btn-submit w-100 mt-3">+ Add Listing</button>
      </form>
    </div>
  </div>
</div>

<script>
  // Image Preview
  function previewImage(event) {
    const input = event.target;
    const wrapper = document.querySelector('.listing-preview-wrapper');
    const preview = document.getElementById('imagePreview');

    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        wrapper.style.display = 'block';
      }
      reader.readAsDataURL(input.files[0]);
    } else {
      preview.src = "";
      wrapper.style.display = 'none';
    }
  }

  // Bootstrap Validation
  (() => {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
