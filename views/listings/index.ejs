    </div>
    
</div>
<div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input tax-input" type="checkbox" role="switch" id="switchCheckDefault" />
            <label class="form-check-label" for="switchCheckDefault"><b>Display total after taxes</b></label>
        </div>
    </div>
    

    <!-- Advanced Search & Filter Controls -->
    <div class="advanced-search-controls mt-4 mb-3">
        <div class="container-fluid">
            <div class="row">
                <!-- Search Results Header -->
                <div class="col-lg-8">
                    <% if (searchQuery) { %>
                        <div class="search-results-header">
                            <h4 class="mb-1">
                                <i class="fas fa-search text-primary me-2"></i>
                                Search Results for "<%= searchQuery %>"
                            </h4>
                            <p class="text-muted mb-0">
                                <% if (totalResults > 0) { %>
                                    Found <%= totalResults %> <%= totalResults === 1 ? 'listing' : 'listings' %> matching your search
                                <% } else { %>
                                    No listings found for your search. Try different keywords.
                                <% } %>
                            </p>
                        </div>
                    <% } else { %>
                        <div class="search-results-header">
                            <h4 class="mb-1">
                                <i class="fas fa-compass text-primary me-2"></i>
                                Explore Amazing Destinations
                            </h4>
                            <p class="text-muted mb-0">
                                Discover <%= totalResults %> unique places to stay around the world
                            </p>
                        </div>
                    <% } %>
                </div>
                
                <!-- Filter & Sort Controls -->
                <div class="col-lg-4">
                    <div class="filter-sort-controls">
                        <div class="d-flex gap-2 justify-content-end">
                            <!-- Advanced Filter Toggle -->
                            <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" 
                                    data-bs-target="#advancedFilters" aria-controls="advancedFilters">
                                <i class="fas fa-filter me-1"></i>
                                Filters
                                <span class="filter-count badge bg-primary ms-1" id="activeFilterCount" style="display: none;">0</span>
                            </button>
                            
                            <!-- Sort Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" 
                                        id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-sort me-1"></i>
                                    <span id="currentSort">Best Match</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                                    <li><a class="dropdown-item sort-option" href="#" data-sort="relevance">
                                        <i class="fas fa-star me-2"></i>Best Match
                                    </a></li>
                                    <li><a class="dropdown-item sort-option" href="#" data-sort="price-low">
                                        <i class="fas fa-arrow-up me-2"></i>Price: Low to High
                                    </a></li>
                                    <li><a class="dropdown-item sort-option" href="#" data-sort="price-high">
                                        <i class="fas fa-arrow-down me-2"></i>Price: High to Low
                                    </a></li>
                                    <li><a class="dropdown-item sort-option" href="#" data-sort="rating">
                                        <i class="fas fa-star me-2"></i>Highest Rated
                                    </a></li>
                                    <li><a class="dropdown-item sort-option" href="#" data-sort="newest">
                                        <i class="fas fa-clock me-2"></i>Newest First
                                    </a></li>
                                </ul>
                            </div>
                            
                            <!-- Clear All Filters -->
                            <button class="btn btn-outline-danger" id="clearAllFilters" style="display: none;">
                                <i class="fas fa-times me-1"></i>Clear All
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Filters Summary -->
    <% if (showFilterSummary) { %>
        <div class="filter-summary mt-3">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <small class="text-muted">Active filters:</small>
                        <div class="mt-1">
                            <% if (appliedFilters.minPrice) { %>
                                <span class="filter-tag">
                                    Min: ₹<%= appliedFilters.minPrice %>
                                    <span class="remove-filter" data-filter="minPrice">×</span>
                                </span>
                            <% } %>
                            <% if (appliedFilters.maxPrice) { %>
                                <span class="filter-tag">
                                    Max: ₹<%= appliedFilters.maxPrice %>
                                    <span class="remove-filter" data-filter="maxPrice">×</span>
                                </span>
                            <% } %>
                            <% if (appliedFilters.minRating) { %>
                                <span class="filter-tag">
                                    <%= appliedFilters.minRating %>+ Stars
                                    <span class="remove-filter" data-filter="minRating">×</span>
                                </span>
                            <% } %>
                            <% if (appliedFilters.features && appliedFilters.features.length > 0) { %>
                                <% appliedFilters.features.forEach(feature => { %>
                                    <span class="filter-tag">
                                        <%= feature.charAt(0).toUpperCase() + feature.slice(1) %>
                                        <span class="remove-filter" data-filter="features" data-value="<%= feature %>">×</span>
                                    </span>
                                <% }); %>
                            <% } %>
                            <% if (appliedFilters.location && appliedFilters.location !== searchQuery) { %>
                                <span class="filter-tag">
                                    Location: <%= appliedFilters.location %>
                                    <span class="remove-filter" data-filter="location">×</span>
                                </span>
                            <% } %>
                            <% if (appliedFilters.sort && appliedFilters.sort !== 'relevance') { %>
                                <span class="filter-tag">
                                    Sort: <%= appliedFilters.sort.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                                    <span class="remove-filter" data-filter="sort">×</span>
                                </span>
                            <% } %>
                        </div>
                    </div>
                    <button class="btn btn-sm btn-outline-secondary" onclick="clearAllFilters()">
                        <i class="fas fa-times me-1"></i>Clear All
                    </button>
                </div>
            </div>
        </div>
    <% } %>

    <!-- No Results Message -->
    <% if (searchQuery && totalResults === 0) { %>
        <div class="no-results-container text-center py-5">
            <div class="container">
                <i class="fas fa-search fa-4x text-muted mb-4"></i>
                <h3 class="text-muted mb-3">No listings found</h3>
                <p class="text-muted mb-4">
                    We couldn't find any listings matching "<strong><%= searchQuery %></strong>". 
                    Try searching for different destinations, property types, or amenities.
                </p>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="search-suggestions">
                            <h5 class="mb-3">Try searching for:</h5>
                            <div class="d-flex flex-wrap gap-2 justify-content-center">
                                <a href="/listings?search=beach" class="btn btn-outline-primary btn-sm">Beach</a>
                                <a href="/listings?search=cabin" class="btn btn-outline-primary btn-sm">Cabin</a>
                                <a href="/listings?search=tokyo" class="btn btn-outline-primary btn-sm">Tokyo</a>
                                <a href="/listings?search=mountains" class="btn btn-outline-primary btn-sm">Mountains</a>
                                <a href="/listings?search=swimming" class="btn btn-outline-primary btn-sm">Swimming Pool</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Advanced Filters Offcanvas -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="advancedFilters" aria-labelledby="advancedFiltersLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="advancedFiltersLabel">
                <i class="fas fa-filter me-2"></i>Advanced Filters
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <form id="advancedFilterForm">
                
                <!-- Price Range Filter -->
                <div class="filter-section mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-dollar-sign me-2"></i>Price Range (per night)
                    </h6>
                    <div class="price-range-container">
                        <div class="row">
                            <div class="col-6">
                                <label for="minPrice" class="form-label">Min Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">₹</span>
                                    <input type="number" class="form-control" id="minPrice" name="minPrice" 
                                           placeholder="0" min="0" step="100">
                                </div>
                            </div>
                            <div class="col-6">
                                <label for="maxPrice" class="form-label">Max Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">₹</span>
                                    <input type="number" class="form-control" id="maxPrice" name="maxPrice" 
                                           placeholder="50000" min="0" step="100">
                                </div>
                            </div>
                        </div>
                        <div class="price-range-slider mt-3">
                            <input type="range" class="form-range" id="priceRangeSlider" min="0" max="50000" step="500">
                            <div class="d-flex justify-content-between text-muted small">
                                <span>₹0</span>
                                <span>₹50,000+</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rating Filter -->
                <div class="filter-section mb-4">
                    <h6 class="filter-title">
                        <i class="fas fa-star me-2"></i>Minimum Rating
                    </h6>
                    <div class="rating-filter">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="minRating" id="rating-any" value="" checked>
                            <label class="form-check-label" for="rating-any">
                                Any Rating
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="minRating" id="rating-4" value="4">
                            <label class="form-check-label" for="rating-4">
                                <span class="rating-stars">★★★★☆</span> 4+ stars
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="minRating" id="rating-4.5" value="4.5">
                            <label class="form-check-label" for="rating-4.5">
                                <span class="rating-stars">★★★★★</span> 4.5+ stars
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Property Features Filter -->
                <div class="filter-section mb-4">
                    <h6 class="filter-title">
