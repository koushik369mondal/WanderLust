<!-- Premium Category Bar with Glassmorphism -->
<div class="tw-glass-dark tw-py-4 tw-shadow-lg tw-border-b tw-border-white/10 tw-sticky tw-top-[72px] tw-z-40">
    <div class="tw-max-w-7xl tw-mx-auto tw-px-4 sm:tw-px-6 lg:tw-px-8">
        <!-- Category Pills - Horizontally Scrollable -->
        <div class="tw-flex tw-gap-3 tw-overflow-x-auto tw-scrollbar-hide tw-pb-2 tw-snap-x tw-snap-mandatory">
            <% const categories=[ {name: 'Trending' , icon: 'fa-fire' , gradient: 'tw-from-coral tw-to-gold' },
                {name: 'Rooms' , icon: 'fa-bed' , gradient: 'tw-from-blue-400 tw-to-purple-500' },
                {name: 'Iconic Cities' , icon: 'fa-mountain-city' , gradient: 'tw-from-yellow-400 tw-to-orange-500' },
                {name: 'Mountains' , icon: 'fa-mountain' , gradient: 'tw-from-green-400 tw-to-teal-500' },
                {name: 'Castles' , icon: 'fa-chess-rook' , gradient: 'tw-from-purple-400 tw-to-pink-500' },
                {name: 'Amazing pool' , icon: 'fa-person-swimming' , gradient: 'tw-from-aqua tw-to-blue-400' },
                {name: 'Camping' , icon: 'fa-tents' , gradient: 'tw-from-green-500 tw-to-lime-500' }, {name: 'Farms' ,
                icon: 'fa-tractor' , gradient: 'tw-from-amber-400 tw-to-orange-400' }, {name: 'Arctic' ,
                icon: 'fa-snowflake' , gradient: 'tw-from-blue-200 tw-to-cyan-300' }, {name: 'Domes' , icon: 'fa-igloo'
                , gradient: 'tw-from-indigo-400 tw-to-blue-500' }, {name: 'Boats' , icon: 'fa-ship' ,
                gradient: 'tw-from-blue-500 tw-to-teal-500' } ]; %>

                <% categories.forEach(cat=> { %>
                    <a href="/listings?category=<%= cat.name %>" class="tw-snap-start tw-flex-shrink-0 tw-group"
                        aria-label="Filter by <%= cat.name %>">
                        <div
                            class="tw-category-pill <%= (typeof category !== 'undefined' && category === cat.name) ? 'tw-bg-gradient-to-r ' + cat.gradient + ' tw-text-white tw-scale-105' : 'tw-text-gray-700 dark:tw-text-gray-200' %>">
                            <i class="fa-solid <%= cat.icon %> tw-mr-2 tw-text-lg group-hover:tw-animate-pulse"
                                aria-hidden="true"></i>
                            <span class="tw-font-semibold">
                                <%= cat.name %>
                            </span>
                        </div>
                    </a>
                    <% }); %>
        </div>
    </div>
</div>

<style>
    /* Hide scrollbar but keep functionality */
    .tw-scrollbar-hide::-webkit-scrollbar {
        display: none;
    }

    .tw-scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>